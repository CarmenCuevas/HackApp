<p id="notice"><%= notice %></p>

<h1>Lista de Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Giro</th>
      <th>Forma juridica</th>
      <th>Tamaño</th>
      <th>Rango</th>
      <th>Capital inicial</th>
      <th>Roi</th>
      <th>Longitud</th>
      <th>Latitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nombre %></td>
        <td><%= empresa.giro %></td>
        <td><%= empresa.forma_juridica %></td>
        <td><%= empresa.tamaño %></td>
        <td><%= empresa.rango %></td>
        <td><%= empresa.capital_inicial %></td>
        <td><%= empresa.roi %></td>
        <td><%= empresa.longitud %></td>
        <td><%= empresa.latitud %></td>
        <td><%= link_to 'Ver', empresa %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Borrar', empresa, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Empresa', new_empresa_path %>
